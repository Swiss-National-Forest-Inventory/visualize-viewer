{
    "name": "visualize-viewer",
    "description": "Visualize cubes on visualize.admin.ch",
    "version": "0.0.1",
    "homepage": "https://www.lfi.ch",
    "license": "MIT",
    "main": "src/script.js",
    "author": {
      "name": "Swiss national forest inventory",
      "email": "lfiweb@wsl.ch",
      "url": "https://www.lfi.ch"
    },
    "repository": {
      "type": "git",
      "url": "https://github.com/Swiss-National-Forest-Inventory/visualize-viewer.git"
    },
    "scripts": {
        "dev": "live-server",
        "build": "npm run jquery & npm run fomantic-js & npm run fomantic-css & npm run fomantic-theme",
        "jquery": "esbuild ./node_modules/jquery/dist/jquery.min.js --outfile=./src/libraries/jquery.min.js",
        "fomantic-js": "esbuild ./node_modules/fomantic-ui/dist/semantic.min.js --outfile=./src/libraries/semantic.min.js",
        "fomantic-css": "esbuild ./node_modules/fomantic-ui/dist/semantic.min.css --outfile=./src/libraries/semantic.min.css",
        "fomantic-theme": "esbuild ./node_modules/fomantic-ui/dist/themes/default/assets/fonts/* --loader:.woff=copy --loader:.woff2=copy --outdir=./src/libraries/themes/default/assets/fonts/",
        "cleanup-libraries": "cf ./src/libraries"
    },
    "dependencies": {
        "fomantic-ui": "^2.9.3",
        "jquery": "^3.7.1"
    },
    "devDependencies": {
        "clear-folder": "^5.1.0",
        "esbuild": "^0.25.0",
        "live-server": "^1.2.2"
    }
}

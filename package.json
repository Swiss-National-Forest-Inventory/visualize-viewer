{
    "name": "visualize-viewer",
    "homepage": "https://www.lfi.ch",
    "license": "MIT",
    "scripts": {
        "dev": "live-server",
        "build": "npm run jquery & npm run fomantic-js & npm run fomantic-css & npm run fomantic-theme",
        "jquery": "esbuild ./node_modules/jquery/dist/jquery.min.js --outfile=./libraries/jquery.min.js",
        "fomantic-js": "esbuild ./node_modules/fomantic-ui/dist/semantic.min.js --outfile=./libraries/semantic.min.js",
        "fomantic-css": "esbuild ./node_modules/fomantic-ui/dist/semantic.min.css --outfile=./libraries/semantic.min.css",
        "fomantic-theme": "esbuild ./node_modules/fomantic-ui/dist/themes/default/assets/fonts/* --loader:.woff=copy --loader:.woff2=copy --outdir=./libraries/themes/default/assets/fonts/",
        "cleanup-libraries": "cf ./libraries"
    },
    "dependencies": {
        "fomantic-ui": "^2.9.3",
        "jquery": "^3.7.1"
    },
    "devDependencies": {
        "clear-folder": "^5.1.0",
        "esbuild": "^0.25.0",
        "live-server": "^1.2.2"
    }
}
